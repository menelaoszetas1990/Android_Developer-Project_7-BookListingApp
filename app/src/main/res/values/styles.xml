<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Search Box style -->
    <style name="search_box">
        <item name="android:padding">@dimen/search_box_padding</item>
        <item name="android:textSize">@dimen/search_box_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Title style-->
    <style name="title_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/title_padding</item>
        <item name="android:paddingBottom">@dimen/title_padding</item>
    </style>

    <!-- Author style -->
    <style name="author_style">
        <item name="android:textSize">@dimen/author_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Description style -->
    <style name="description_style">
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:paddingTop">@dimen/description_padding_top</item>
        <item name="android:paddingBottom">@dimen/description_padding_bottom</item>
    </style>

</resources>